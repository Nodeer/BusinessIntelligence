.well(ng-show="task.inputs.length")
    label Inputs:
    .well(ng-repeat="input in task.inputs")
        .form-group
            label Input {{alphaOrder(task.inputs, input)}}:
            table.table.table-striped(style="margin-bottom: 0px")
                thead
                    th Condition
                    th Enter from UI
                    th Enter via API
                    th Generated by Task
                    th Note
                tbody
                    tr(ng-repeat="condition in input.conditions")
                        td
                            include partial_condition_icon
                            |  
                            a(ng-click="viewCondition(condition, {input: 1})") {{condition.name}}
                        td
                            div(ng-repeat="input in condition.ui.input track by $index")
                                | {{input}}
                        td
                            div(ng-repeat="input in condition.api.input track by $index")
                                | {{input}}
                        td
                            img.loader(src="/public/images/loader.gif", ng-show="!condition.producerTasksLoaded")
                            div(ng-repeat="producerTask in getProducerTasks(condition)")
                                a(ng-href="/task/view/{{producerTask.id}}", popover="{{producerTask.description}}", popover-trigger="mouseenter", popover-popup-delay="300", popover-placement="right") {{producerTask.name}}
                        td
                            span(popover="{{condition.note}}", popover-trigger="mouseenter", popover-popup-delay="300", popover-placement="right") {{trimText(condition.note, 25)}}